<div>
  <h1>Editing article</h1>
</div>

<div>
  <%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
</div>

<div>
  <%= link_to "Back", articles_path %>
  <%= link_to "Show", article_path(@article.id) %>
</div>
